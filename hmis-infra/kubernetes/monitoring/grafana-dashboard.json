{
  "annotations": { "list": [] },
  "editable": true,
  "title": "HMIS SaaS - Dashboard Operacional",
  "uid": "hmis-ops",
  "version": 1,
  "timezone": "America/Santo_Domingo",
  "panels": [
    {
      "title": "Peticiones por segundo",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(hmis_http_requests_total[5m])) by (status_code)",
          "legendFormat": "HTTP {{status_code}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": { "fillOpacity": 20 }
        }
      }
    },
    {
      "title": "Latencia P50 / P95 / P99",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(hmis_http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "P50"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(hmis_http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "P95"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(hmis_http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "P99"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s" }
      }
    },
    {
      "title": "Peticiones activas",
      "type": "gauge",
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 8 },
      "targets": [
        { "expr": "hmis_active_requests" }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "value": 0, "color": "green" },
              { "value": 30, "color": "yellow" },
              { "value": 50, "color": "red" }
            ]
          }
        }
      }
    },
    {
      "title": "Tasa de errores 5xx",
      "type": "stat",
      "gridPos": { "h": 6, "w": 6, "x": 6, "y": 8 },
      "targets": [
        {
          "expr": "sum(rate(hmis_http_requests_total{status_code=~\"5..\"}[5m])) / sum(rate(hmis_http_requests_total[5m])) * 100",
          "legendFormat": "Error Rate %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "steps": [
              { "value": 0, "color": "green" },
              { "value": 1, "color": "yellow" },
              { "value": 5, "color": "red" }
            ]
          }
        }
      }
    },
    {
      "title": "Peticiones por modulo",
      "type": "piechart",
      "gridPos": { "h": 6, "w": 6, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "sum(increase(hmis_http_requests_total[1h])) by (path_template)",
          "legendFormat": "{{path_template}}"
        }
      ]
    },
    {
      "title": "Top endpoints mas lentos (P95)",
      "type": "table",
      "gridPos": { "h": 6, "w": 6, "x": 18, "y": 8 },
      "targets": [
        {
          "expr": "topk(10, histogram_quantile(0.95, sum(rate(hmis_http_request_duration_seconds_bucket[5m])) by (le, path_template)))",
          "legendFormat": "{{path_template}}",
          "format": "table",
          "instant": true
        }
      ]
    },
    {
      "title": "Logins exitosos vs fallidos",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 14 },
      "targets": [
        {
          "expr": "sum(rate(hmis_http_requests_total{path_template=\"/api/v1/auth/login\", status_code=\"200\"}[5m]))",
          "legendFormat": "Exitosos"
        },
        {
          "expr": "sum(rate(hmis_http_requests_total{path_template=\"/api/v1/auth/login\", status_code=\"401\"}[5m]))",
          "legendFormat": "Fallidos (401)"
        }
      ]
    },
    {
      "title": "Operaciones de BD por modulo",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 14 },
      "targets": [
        {
          "expr": "sum(rate(hmis_db_operations_total[5m])) by (module)",
          "legendFormat": "{{module}}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "ops" }
      }
    }
  ],
  "templating": {
    "list": [
      {
        "name": "namespace",
        "type": "constant",
        "current": { "value": "hmis" }
      }
    ]
  },
  "time": { "from": "now-1h", "to": "now" },
  "refresh": "30s"
}
