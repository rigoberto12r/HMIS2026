# ===========================================
# HMIS SaaS - Variables de Entorno
# Copiar a .env y ajustar valores
# ===========================================

# --- Aplicacion ---
APP_NAME=HMIS SaaS
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=cambiar-esta-clave-en-produccion

# --- Base de Datos ---
DATABASE_URL=postgresql+asyncpg://hmis_admin:hmis_dev_2026@localhost:5432/hmis
DATABASE_ECHO=false
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# --- Redis ---
REDIS_URL=redis://localhost:6379/0

# --- JWT / Autenticacion ---
JWT_SECRET_KEY=cambiar-jwt-secret-en-produccion
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# --- CORS ---
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# --- Busqueda (Meilisearch) ---
MEILISEARCH_URL=http://localhost:7700
MEILISEARCH_KEY=hmis_meili_dev_key

# --- Almacenamiento (MinIO/S3) ---
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY=hmis_minio
S3_SECRET_KEY=hmis_minio_2026
S3_BUCKET_NAME=hmis-documents
S3_REGION=us-east-1

# --- Multi-Tenancy ---
DEFAULT_SCHEMA=public
TENANT_HEADER=X-Tenant-ID
TENANT_SUBDOMAIN_ENABLED=true

# --- Distributed Tracing (OpenTelemetry) ---
# Leave empty to disable tracing (default for development)
OTLP_ENDPOINT=
# For production with Jaeger: http://jaeger:4317
OTLP_INSECURE=true
# Comma-separated URLs to exclude from tracing
TRACING_EXCLUDED_URLS=/health,/health/live,/health/ready,/metrics

# --- AWS Secrets Manager ---
# Set to true in production to use AWS Secrets Manager for sensitive data
USE_SECRETS_MANAGER=false
# AWS region where secrets are stored
AWS_REGION=us-east-1

# --- Stripe Payment Gateway ---
STRIPE_SECRET_KEY=sk_test_cambiar_clave_stripe
STRIPE_PUBLISHABLE_KEY=pk_test_cambiar_clave_publica_stripe
STRIPE_WEBHOOK_SECRET=whsec_cambiar_webhook_secret
